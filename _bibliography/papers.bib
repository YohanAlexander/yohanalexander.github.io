@article{z2n,
abstract = {Um exemplo cl{\'{a}}ssico de interesse em astrof{\'{i}}sica {\'{e}} o estudo de variabilidade temporal da intensidade luminosa de um astro – por exemplo, uma estrela. Nesse tipo de estudo s{\~{a}}o considerados f{\'{o}}tons associados a uma dada regi{\~{a}}o do c{\'{e}}u correspondente ao astro sob investiga{\c{c}}{\~{a}}o e que correspondem a uma dada faixa de energia, e investiga-se como a quantidade de f{\'{o}}tons registrados variou em fun{\c{c}}{\~{a}}o do tempo. A variabilidade temporal da fonte pode ser peri{\'{o}}dica ou aperi{\'{o}}dica, e a verifica{\c{c}}{\~{a}}o da exist{\^{e}}ncia de uma componente peri{\'{o}}dica {\'{e}} comum em an{\'{a}}lises temporais. Uma das poss{\'{i}}veis t{\'{e}}cnicas utilizadas nessa verifica{\c{c}}{\~{a}}o s{\~{a}}o os ditos periodogramas. Os periodogramas implementam t{\'{e}}cnicas matem{\'{a}}ticas sofisticadas em ferramentas computacionais. O periodograma Z2n (Buccheri et al., 1983) {\'{e}} uma alternativa para explora{\c{c}}{\~{a}}o direta dos eventos (f{\'{o}}tons), individualmente – o que pode ser feito e {\'{e}} adequado ao caso de observa{\c{c}}{\~{o}}es em raios X de fontes de baixo brilho. O Z2n cl{\'{a}}ssico funciona aplicando cada evento (tempos de chegada dos f{\'{o}}tons) detectado em uma observa{\c{c}}{\~{a}}o feita por um telesc{\'{o}}pio a uma an{\'{a}}lise de Fourier. Este projeto teve como fim implementar o periodograma Z2n em linguagem Python e oferec{\^{e}}-lo gratuitamente para a comunidade cient{\'{i}}fica atrav{\'{e}}s de uma interface “amig{\'{a}}vel”. Nessa implementa{\c{c}}{\~{a}}o foram aplicadas t{\'{e}}cnicas que permitem otimizar o potencial de processamento do computador e t{\'{e}}cnicas eficientes na manipula{\c{c}}{\~{a}}o de dados, que juntas minimizam o tempo de obten{\c{c}}{\~{a}}o do resultado final.},
author = {Fran{\c{c}}a, Yohan Alexander Dantas},
keywords = {an{\'{a}}lise temporal,astrof{\'{i}}sica,computa{\c{c}}{\~{a}}o,periodogramas,python},
pages = {1--33},
title = {{Implementa{\c{c}}{\~{a}}o em linguagem python e uso do periodograma z2n}},
year = {2020}
}

