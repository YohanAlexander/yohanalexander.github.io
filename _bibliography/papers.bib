@article{cyberdemocracy,
abstract = {Na era da computa{\c{c}}{\~{a}}o social e da inform{\'{a}}tica ub{\'{i}}qua, a sociedade clama por uma forma de Estado transparente que se ponha a servi{\c{c}}o da intelig{\^{e}}ncia coletiva. As formas de lei e justi{\c{c}}a encontradas nos regimes antiquados, onde o poder concentrado impedia o crescimento da aprendizagem coletiva, n{\~{a}}o tem mais espa{\c{c}}o onde se teve um vislumbre da emancipa{\c{c}}{\~{a}}o humana. Para Levy e Lemos (2010, p. 223), “a interconex{\~{a}}o dos computadores, finalmente criou um meio ub{\'{i}}quo para todos os signos culturais, para sua reprodu{\c{c}}{\~{a}}o e muta{\c{c}}{\~{o}}es aceleradas”. E ainda que sendo declaradamente ut{\'{o}}pica, a obra faz uma reflex{\~{a}}o a partir da situa{\c{c}}{\~{a}}o atual da sociedade pervasiva a Internet e entrega pensamentos e constata{\c{c}}{\~{o}}es importantes para a compreens{\~{a}}o deste cen{\'{a}}rio.},
author = {Fran{\c{c}}a, Yohan Alexander Dantas},
pages = {1--10},
title = {{O futuro da internet: em dire{\c{c}}{\~{a}}o a uma ciberdemocracia planet{\'{a}}ria}},
year = {2019}
}

